#!/bin/sh
scriptdir=$(dirname $0)
for p in "$@" ; do
    if ! pushd $p > /dev/null || ! [ -e binaries ] ; then
        echo "could not find $p/binaries"
        exit 21
    fi
    shopt -s nullglob
    if [[ -z RPMS/* ]] ; then
         echo "result:$p=notbuilt"
         continue
    fi
    $scriptdir/compare > RPMS/$p-compare.out
    ret=$?
    [ $ret = 0 ] && rm -f RPMS/$p-compare.out
    popd > /dev/null
    echo "result:$p=$ret"
done

