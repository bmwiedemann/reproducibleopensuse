#!/bin/sh
scriptdir=$(dirname $0)
for p in "$@" ; do
    if ! pushd $p > /dev/null || ! [ -e binaries ] ; then
        echo "could not find $p/binaries"
        exit 21
    fi
    if test -z "$(find RPMS/ -maxdepth 1 -name '*.rpm' -print -quit)" ; then
         echo "result:$p=notbuilt"
         continue
    fi
    o=RPMS/$p-compare.out
    $scriptdir/compare > $o
    ret=$?
    [ $ret = 0 ] && rm -f $o
    popd > /dev/null
    echo "result:$p=$ret"
done

