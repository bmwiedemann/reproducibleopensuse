#!/usr/bin/perl -w
use strict;
sub myexit($)
{
    my $ret=shift||0;
    print "rbkt returned $ret\n";
    exit $ret;
}

my $seed=111;
my $seedfile="tests.d/.randseed";
if(open(RAND, $seedfile)) {
    $seed=<RAND>;
    close(RAND);
}
$seed++;
open(RAND, ">", $seedfile) or die "writing $seedfile: $!";
print RAND $seed;
close RAND;
print "using seed $seed\n";
srand($seed);
if($ENV{PKG} eq "0bit") {
    myexit 0;
} elsif($ENV{PKG} eq "random2bit") {
    myexit (!(($ARGV[5] || int(rand(4))) && ($ARGV[6] || int(rand(4)))));
} elsif($ENV{PKG} eq "1bit") {
    myexit (!$ARGV[2]);
} elsif($ENV{PKG} eq "3bit") {
    myexit (!($ARGV[0] && $ARGV[2] && $ARGV[7]));
} elsif($ENV{PKG} eq "unreproducible") {
    myexit 1;
} elsif($ENV{PKG} eq "nonbuilding") {
    myexit 255 if($ARGV[3]);
    myexit (!$ARGV[2]);
} elsif($ENV{PKG} eq "nonbuilding2") {
    myexit 255 if($ARGV[4]);
    myexit 255 if($ARGV[2]);
    myexit (!$ARGV[3]);
} elsif($ENV{PKG} eq "nonbuildingunreproducible") {
    myexit 255 if($ARGV[4]);
    myexit 1;
} elsif($ENV{PKG} eq "neverbuilding") {
    myexit 255;
} else {
    print "FIXME: not implemented";
    myexit 55;
}
