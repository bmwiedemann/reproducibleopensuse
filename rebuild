#!/bin/sh

: ${OSC_BUILD_ROOT:="/var/tmp/build-root/standard-x86_64"}
: ${clean:=--clean}
: ${OUTDIR:=RPMS}
export OSC_BUILD_ROOT
pkg=$(basename $(pwd))
debuginfo=--disable-debuginfo
if grep -q "^$pkg$" ~/reproducibleopensuse/exceptions.cleanbuild ; then
  clean=${clean/--noinit/--clean}
fi
if grep -q "^$pkg$" ~/reproducibleopensuse/exceptions.rootforbuild ; then
  rootforbuild=" --userootforbuild"
fi
if grep -q "^$pkg$" ~/reproducibleopensuse/exceptions.debuginfo ; then
  debuginfo="--debuginfo"
fi
if grep -q "^$pkg$" ~/reproducibleopensuse/exceptions.date ; then
  VM_CUSTOMOPT=""
fi
if [[ $VM_CUSTOMOPT ]] && osc build --help | grep -q build-opt ; then
  oscopts+=("--build-opt=--vm-custom-opt=$VM_CUSTOMOPT")
  unset VM_CUSTOMOPT
fi
[[ $rbsnd ]] && oscopts+=(--define='%__spec_build_post [ -e /usr/bin/strip-all-nondeterminism ] && strip-all-nondeterminism ; exit 0')
oscopts+=("--build-opt=--vm-disk-filesystem=ext4")
oscopts+=(--define='%source_date_epoch_from_changelog Y' --define='%_buildhost reproducible' --define='%clamp_mtime_to_source_date_epoch Y')

#vmtype="--vm-type=kvm"
: ${project:=home:bmwiedemann:reproducible}
: ${repo:=openSUSE_Tumbleweed}
rm -rf $OSC_BUILD_ROOT/home/abuild/rpmbuild/RPMS/ $OSC_BUILD_ROOT/.mount/.build.packages/RPMS/ $OSC_BUILD_ROOT/.build.log
rm -rf $OUTDIR
mkdir -p $OUTDIR
echo in-progress > $OUTDIR/.osc-build-retval
hostname > $OUTDIR/buildhost
osc build --keep-pkg=$OUTDIR/ --alternative-project "$project" --nopreinstallimage $debuginfo --noservice$rootforbuild $vmtype $clean "${oscopts[@]}" $repo $(basename `pwd`).spec "$@" 2>&1 | tee $OUTDIR/.build.log2
echo ${PIPESTATUS[0]} > $OUTDIR/.osc-build-retval
cp -a $OUTDIR/.osc-build-retval .
cp -a $OSC_BUILD_ROOT/.build.log $OUTDIR/
cp -a $OUTDIR/.build.log .
test -e .build.log && tail -1 .build.log | perl -ne '/\[\s*(\d+)s\]/ && print $1' > $OUTDIR/build-time
ntpdate -p 1 ntp.zq1.de ntp.suse.de
find -mtime -0 -print0 | xargs --no-run-if-empty -0 touch
if [ `cat $OUTDIR/.osc-build-retval` -gt 0 ] ; then
    exit 1
fi
calcchecksums ../$pkg/$OUTDIR/*.rpm | sed -e 's!\.\./!!' > $OUTDIR/checksums
test -n "$(find $OUTDIR/ -maxdepth 1 -name '*.rpm' -print -quit)"
