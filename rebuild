#!/bin/sh

#vmtype="--vm-type=kvm"
rm -rf binaries /var/tmp/build-root/standard-x86_64/home/abuild/rpmbuild/RPMS/ /var/tmp/build-root/standard-x86_64/.mount/.build.packages/RPMS/
osc getbinaries standard x86_64
osc build $vmtype --clean
rm -rf RPMS
mkdir -p RPMS
cp -a /var/tmp/build-root/standard-x86_64/home/abuild/rpmbuild/RPMS/*/*.rpm /var/tmp/build-root/standard-x86_64/.mount/.build.packages/RPMS/*/*.rpm RPMS/
